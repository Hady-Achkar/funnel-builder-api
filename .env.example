#=================================================================
# APPLICATION SETTINGS
#=================================================================
NODE_ENV=development
PORT=4444
FRONTEND_URL=http://localhost:3000

#=================================================================
# DATABASES
#=================================================================

# Local Database (for development)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/funnel_builder"

# Azure PostgreSQL (Development/Production Environment)
DATABASE_URL="postgresql://username:password@your-server.postgres.database.azure.com:5432/database_name?sslmode=require"

#=================================================================
# AUTHENTICATION
#=================================================================
JWT_SECRET=your-secure-jwt-secret-key-here-use-a-long-random-string

#=================================================================
# ENCRYPTION
#=================================================================
# 64-character hex string (256 bits) for AES-256 encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

#=================================================================
# REDIS CACHE
#=================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0

#=================================================================
# AZURE BLOB STORAGE
#=================================================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account-name;AccountKey=your-account-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=your-container-name
STORAGE_URL=https://your-storage-account.blob.core.windows.net/

#=================================================================
# EMAIL (SendGrid)
#=================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@example.com

#=================================================================
# PAYMENT GATEWAY (Mamopay)
#=================================================================
MAMOPAY_API_KEY=your-mamopay-api-key
MAMOPAY_API_URL=https://sandbox.dev.business.mamopay.com

#=================================================================
# CRON JOBS
#=================================================================
CRON_SECRET_TOKEN=your-secure-cron-secret-token

#=================================================================
# CLOUDFLARE API
#=================================================================

# Core Cloudflare Configuration
CF_API_TOKEN=your-cloudflare-api-token
CF_ACCOUNT_ID=your-cloudflare-account-id

#-----------------------------------------------------------------
# Zone 1: Main Domain (e.g., digitalsite.app)
#-----------------------------------------------------------------
# Purpose: User-created subdomains (e.g., subdomain.yourdomain.app)
CF_DOMAIN=yourdomain.app
CF_ZONE_ID=your-zone-id
CF_IP=your.server.ip.address

# Custom Hostnames (SSL for SaaS)
# Purpose: Custom domains with SSL (e.g., customer-domain.com)
CF_ZONE_ID=your-zone-id
CF_VERIFICATION_DOMAIN=yourdomain.app

#-----------------------------------------------------------------
# Zone 2: Workspace Domain (e.g., digitalsite.io)
#-----------------------------------------------------------------
# Purpose: Workspace-related subdomains (e.g., workspace.yourdomain.io)
WORKSPACE_DOMAIN=yourdomain.io

#=================================================================
# MONDAY.COM INTEGRATION
#=================================================================
# API token from Monday.com (Admin > API)
MONDAY_API_KEY=your-monday-api-token

# Board ID where partner registrations will be recorded
MONDAY_BOARD_ID=your-board-id

# Optional: Group ID within the board
# MONDAY_GROUP_ID=new_group

#=================================================================
# END OF CONFIGURATION
#=================================================================
