# Example Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=4444

# Database
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Authentication
JWT_SECRET=your-secret-key-here

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER_NAME=your-container-name
STORAGE_URL=https://your-storage-account.blob.core.windows.net/

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-from-email@example.com

# Frontend
FRONTEND_URL=https://your-frontend-url.com/

# Cloudflare
CF_API_TOKEN=your-cloudflare-api-token
CF_ACCOUNT_ID=your-cloudflare-account-id
CF_VERIFICATION_DOMAIN=your-verification-domain.com
CF_DOMAIN=your-domain.com
CF_ZONE_ID=your-zone-id

# Workspace Configuration
WORKSPACE_DOMAIN=your-workspace-domain.com
WORKSPACE_ZONE_ID=your-workspace-zone-id
WORKSPACE_IP=your-workspace-ip

# Payment (Mamopay)
MAMOPAY_API_KEY=your-mamopay-api-key
MAMOPAY_API_URL=https://api.mamopay.com/