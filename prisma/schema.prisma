generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserPlan {
  BUSINESS
  AGENCY
}

model User {
  id                        Int                @id @default(autoincrement())
  email                     String             @unique
  username                  String             @unique
  firstName                 String
  lastName                  String
  password                  String
  verified                  Boolean            @default(false)
  verificationToken         String?            @unique
  verificationTokenExpiresAt DateTime?
  passwordResetToken        String?            @unique
  passwordResetExpiresAt    DateTime?
  isAdmin                   Boolean            @default(false)
  plan                      UserPlan           
  createdAt                 DateTime           @default(now())
  updatedAt                 DateTime           @updatedAt
  maximumFunnels            Int                @default(5) // Total funnel budget for the user
  maximumCustomDomains      Int                @default(1) // Total custom domain budget
  maximumSubdomains         Int                @default(3) // Total subdomain budget
  workspaceMembers          WorkspaceMember[]
  ownedWorkspaces           Workspace[]        @relation("WorkspaceOwner")
  createdFunnels            Funnel[]           @relation("FunnelCreator")
  createdDomains            Domain[]           @relation("DomainCreator")
  templates                 Template[]
  imageFolders              ImageFolder[]

  @@map("users")
}

model Workspace {
  id                     Int      @id @default(autoincrement())
  name                   String
  slug                   String   @unique
  ownerId                Int
  description            String?
  settings               Json?    @default("{}")
  allocatedFunnels       Int      @default(0) // Funnels allocated from user's budget
  allocatedCustomDomains Int      @default(0) // Custom domains allocated from user's budget
  allocatedSubdomains    Int      @default(0) // Subdomains allocated from user's budget
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  owner       User     @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     WorkspaceMember[]
  funnels     Funnel[]
  domains     Domain[]
  
  @@map("workspaces")
}

model WorkspaceMember {
  id          Int                     @id @default(autoincrement())
  userId      Int
  workspaceId Int
  role        WorkspaceRole
  permissions WorkspacePermission[]
  joinedAt    DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  
  user        User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace               @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([userId, workspaceId])
  @@index([workspaceId])
  @@index([userId])
  @@map("workspace_members")
}

enum WorkspaceRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

enum WorkspacePermission {
  MANAGE_WORKSPACE
  MANAGE_MEMBERS
  CREATE_FUNNELS
  EDIT_FUNNELS
  EDIT_PAGES
  DELETE_FUNNELS
  VIEW_ANALYTICS
  MANAGE_DOMAINS
  CREATE_DOMAINS
  DELETE_DOMAINS
  CONNECT_DOMAINS
}

model Funnel {
  id                Int            @id @default(autoincrement())
  name              String
  slug              String
  status            FunnelStatus   @default(DRAFT)
  workspaceId       Int
  createdBy         Int
  workspace         Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  creator           User           @relation("FunnelCreator", fields: [createdBy], references: [id])
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  themeId           Int?           @unique
  domainConnections FunnelDomain[]
  theme             Theme?         @relation(fields: [themeId], references: [id])
  pages             Page[]
  settings          FunnelSettings?
  insights          Insight[]

  @@unique([workspaceId, name])
  @@unique([workspaceId, slug])
  @@index([workspaceId])
  @@index([createdBy])
  @@index([status])
  @@map("funnels")
}

enum FunnelStatus {
  DRAFT
  LIVE
  ARCHIVED
  SHARED
}

model Domain {
  id                    Int            @id @default(autoincrement())
  hostname              String         @unique
  type                  DomainType
  status                DomainStatus   @default(PENDING)
  sslStatus             SslStatus      @default(PENDING)
  workspaceId           Int
  createdBy             Int
  cloudflareHostnameId  String?        @unique
  cloudflareZoneId      String?
  cloudflareRecordId    String?
  verificationToken     String?
  ownershipVerification Json?
  dnsInstructions       Json?
  sslCertificateId      String?
  sslValidationRecords  Json?
  lastVerifiedAt        DateTime?
  expiresAt             DateTime?
  notes                 String?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  workspace             Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  creator               User           @relation("DomainCreator", fields: [createdBy], references: [id])
  funnelConnections     FunnelDomain[]

  @@index([workspaceId])
  @@index([createdBy])
  @@index([status])
  @@index([type])
  @@map("domains")
}

model FunnelDomain {
  id        Int      @id @default(autoincrement())
  funnelId  Int
  domainId  Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, domainId])
  @@index([funnelId])
  @@index([domainId])
  @@map("funnel_domains")
}

model Page {
  id        Int      @id @default(autoincrement())
  name      String
  content   String?
  order     Int
  type      PageType @default(PAGE)
  linkingId String?
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  visits    Int      @default(0)
  funnelId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, linkingId])
  @@map("pages")
}

enum PageType {
  PAGE
  RESULT
}

model Session {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  funnelId     Int
  visitedPages Int[]    @default([])
  interactions Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  formSubmissions    FormSubmission[]
  insightSubmissions InsightSubmission[]
  
  @@index([sessionId])
  @@index([funnelId])
  @@index([createdAt])
  @@map("sessions")
}

enum DomainType {
  CUSTOM_DOMAIN
  SUBDOMAIN
}

enum DomainStatus {
  PENDING
  VERIFIED
  ACTIVE
  FAILED
  SUSPENDED
}

enum SslStatus {
  PENDING
  ACTIVE
  ERROR
  EXPIRED
}

model Theme {
  id              Int          @id @default(autoincrement())
  name            String       @default("Default Theme")
  backgroundColor String       @default("#0e1e12")   
  textColor       String       @default("#d4ecd0")   
  buttonColor     String       @default("#387e3d")  
  buttonTextColor String       @default("#e8f5e9")  
  borderColor     String       @default("#214228")  
  optionColor     String       @default("#16331b")  
  fontFamily      String       @default("Inter, sans-serif")
  borderRadius    BorderRadius @default(SOFT)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  funnel Funnel?

  @@map("themes")
}

enum BorderRadius {
  NONE
  SOFT
  ROUNDED
}

enum InsightType {
  QUIZ
  SINGLE_CHOICE
  MULTIPLE_CHOICE
}

model Insight {
  id          Int         @id @default(autoincrement())
  type        InsightType
  name        String
  description String?
  content     Json        // Questions and options
  settings    Json?       @default("{}")
  funnelId    Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  funnel      Funnel              @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  submissions InsightSubmission[]
  
  @@index([funnelId])
  @@index([type])
  @@map("insights")
}

model InsightSubmission {
  id          Int       @id @default(autoincrement())
  insightId   Int
  sessionId   String
  answers     Json?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  insight Insight @relation(fields: [insightId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  
  @@unique([insightId, sessionId])
  @@index([sessionId])
  @@map("insight_submissions")
}

// Template System Models
model TemplateCategory {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  slug        String     @unique
  description String?
  templates   Template[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@map("template_categories")
}

model Template {
  id                 Int                @id @default(autoincrement())
  name               String
  slug               String             @unique
  description        String?
  categoryId         Int
  category           TemplateCategory   @relation(fields: [categoryId], references: [id])
  previewImages      TemplateImage[]    
  pages              TemplatePage[]   
  tags               String[]          
  usageCount         Int                @default(0)
  isActive           Boolean            @default(true)
  isPublic           Boolean            @default(true)
  createdByUserId    Int
  createdBy          User               @relation(fields: [createdByUserId], references: [id])
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([isActive, isPublic])
  @@index([createdByUserId])
  @@map("templates")
}

model TemplateImage {
  id          Int      @id @default(autoincrement())
  templateId  Int
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  imageUrl    String  
  imageType   TemplateImageType @default(PREVIEW)
  order       Int      @default(0)
  caption     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([templateId])
  @@map("template_images")
}

enum TemplateImageType {
  THUMBNAIL
  PREVIEW
}

model TemplatePage {
  id              Int      @id @default(autoincrement())
  templateId      Int
  template        Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  name            String
  content         String?
  order           Int
  type            PageType @default(PAGE)
  settings        Json?
  linkingId       String? @unique
  seoTitle        String?
  seoDescription  String?
  seoKeywords     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([templateId])
  @@map("template_pages")
}

model Image {
  id          Int          @id @default(autoincrement())
  name        String?
  url         String
  altText     String?
  size        Int?
  folderId    Int?
  folder      ImageFolder? @relation("ImageFolderImages", fields: [folderId], references: [id], onDelete: Cascade)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("images")
}

model ImageFolder {
  id          Int      @id @default(autoincrement())
  name        String
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  images      Image[]  @relation("ImageFolderImages")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("image_folders")
}

model Form {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  formContent Json     
  isActive    Boolean  @default(true)
  funnelId    Int?
  webhookUrl        String?   
  webhookEnabled    Boolean   @default(false)
  webhookHeaders    Json?     @default("{}") 
  webhookSecret     String?   
  webhookSuccessCount Int @default(0)
  webhookFailureCount Int @default(0)
  lastWebhookAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  submissions FormSubmission[]
  
  @@index([isActive])
  @@index([funnelId])
  @@index([webhookEnabled])
  @@map("forms")
}

model FormSubmission {
  id            Int       @id @default(autoincrement())
  formId        Int
  sessionId     String    
  submittedData Json?     
  isCompleted   Boolean   @default(false)
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  form    Form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  
  @@unique([formId, sessionId]) 
  @@index([sessionId])
  @@index([isCompleted])
  @@map("form_submissions")
}

model FunnelSettings {
  id                    Int      @id @default(autoincrement())
  funnelId              Int      @unique
  defaultSeoTitle       String?
  defaultSeoDescription String?
  defaultSeoKeywords    String?
  favicon               String?
  ogImage               String?
  googleAnalyticsId     String?
  facebookPixelId       String?
  customTrackingScripts Json?    @default("[]")
  enableCookieConsent   Boolean  @default(false)
  cookieConsentText     String?
  privacyPolicyUrl      String?
  termsOfServiceUrl     String?
  language              String?  @default("en")
  timezone              String?  @default("UTC")
  dateFormat            String?  @default("DD.MM.YYYY")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  funnel                Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  
  @@index([funnelId])
  @@map("funnel_settings")
}
