generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int       @id @default(autoincrement())
  email                  String    @unique
  name                   String?
  password               String
  passwordResetToken     String?   @unique
  passwordResetExpiresAt DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  funnels                Funnel[]
  domains                Domain[]

  @@map("users")
}

model Funnel {
  id                Int            @id @default(autoincrement())
  name              String
  status            String         @default("draft") // draft, active, live
  userId            Int
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages             Page[]
  domainConnections FunnelDomain[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@index([userId])
  @@index([status])
  @@map("funnels")
}

enum DomainType {
  CUSTOM_DOMAIN
  SUBDOMAIN
}

enum DomainStatus {
  PENDING
  VERIFIED
  ACTIVE
  FAILED
  SUSPENDED
}

enum SslStatus {
  PENDING
  ACTIVE
  ERROR
  EXPIRED
}

model Domain {
  id        Int          @id @default(autoincrement())
  hostname  String       @unique
  type      DomainType
  status    DomainStatus @default(PENDING)
  sslStatus SslStatus    @default(PENDING)
  userId    Int
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Cloudflare integration
  cloudflareHostnameId String? @unique
  cloudflareZoneId     String?
  cloudflareRecordId   String?

  // Verification
  verificationToken     String?
  ownershipVerification Json?
  dnsInstructions       Json?

  // SSL/TLS
  sslCertificateId     String?
  sslValidationRecords Json?

  // Metadata
  lastVerifiedAt DateTime?
  expiresAt      DateTime?
  notes          String?

  // Relations
  funnelConnections FunnelDomain[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([type])
  @@map("domains")
}

model FunnelDomain {
  id       Int     @id @default(autoincrement())
  funnelId Int
  domainId Int
  isActive Boolean @default(true)

  funnel Funnel @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  domain Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([funnelId, domainId])
  @@index([funnelId])
  @@index([domainId])
  @@map("funnel_domains")
}

model Page {
  id        Int      @id @default(autoincrement())
  name      String
  content   String?
  order     Int
  linkingId String?  @unique
  funnelId  Int
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pages")
}
