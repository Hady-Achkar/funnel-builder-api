generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int        @id @default(autoincrement())
  email                  String     @unique
  name                   String?
  password               String
  passwordResetToken     String?    @unique
  passwordResetExpiresAt DateTime?
  isAdmin                Boolean    @default(false)
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
  funnels                Funnel[]
  domains                Domain[]
  templates              Template[]

  @@map("users")
}

model Funnel {
  id                Int            @id @default(autoincrement())
  name              String
  status            String         @default("draft") // draft, active, live
  userId            Int
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages             Page[]
  domainConnections FunnelDomain[]
  templateId        Int? // Track which template this funnel was created from
  template          Template?      @relation(fields: [templateId], references: [id])
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@index([userId])
  @@index([status])
  @@index([templateId])
  @@map("funnels")
}

enum DomainType {
  CUSTOM_DOMAIN
  SUBDOMAIN
}

enum DomainStatus {
  PENDING
  VERIFIED
  ACTIVE
  FAILED
  SUSPENDED
}

enum SslStatus {
  PENDING
  ACTIVE
  ERROR
  EXPIRED
}

model Domain {
  id        Int          @id @default(autoincrement())
  hostname  String       @unique
  type      DomainType
  status    DomainStatus @default(PENDING)
  sslStatus SslStatus    @default(PENDING)
  userId    Int
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Cloudflare integration
  cloudflareHostnameId String? @unique
  cloudflareZoneId     String?
  cloudflareRecordId   String?

  // Verification
  verificationToken     String?
  ownershipVerification Json?
  dnsInstructions       Json?

  // SSL/TLS
  sslCertificateId     String?
  sslValidationRecords Json?

  // Metadata
  lastVerifiedAt DateTime?
  expiresAt      DateTime?
  notes          String?

  // Relations
  funnelConnections FunnelDomain[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([type])
  @@map("domains")
}

model FunnelDomain {
  id       Int     @id @default(autoincrement())
  funnelId Int
  domainId Int
  isActive Boolean @default(true)

  funnel Funnel @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  domain Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([funnelId, domainId])
  @@index([funnelId])
  @@index([domainId])
  @@map("funnel_domains")
}

model Page {
  id        Int      @id @default(autoincrement())
  name      String
  content   String?
  order     Int
  linkingId String?  @unique
  funnelId  Int
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pages")
}

// Template System Models
model TemplateCategory {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  slug        String     @unique
  description String?
  icon        String? // Icon class or emoji
  order       Int        @default(0)
  isActive    Boolean    @default(true)
  templates   Template[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@index([isActive])
  @@map("template_categories")
}

model Template {
  id              Int              @id @default(autoincrement())
  name            String
  slug            String           @unique
  description     String?
  categoryId      Int
  category        TemplateCategory @relation(fields: [categoryId], references: [id])
  thumbnailImage  String? // Main thumbnail image URL
  previewImages   TemplateImage[] // Additional preview images
  pages           TemplatePages[] // Template page data
  tags            String[] // Search tags
  usageCount      Int              @default(0)
  isActive        Boolean          @default(true)
  isPublic        Boolean          @default(true)
  createdByUserId Int
  createdBy       User             @relation(fields: [createdByUserId], references: [id])
  funnelsCreated  Funnel[] // Track funnels created from this template
  metadata        Json? // Additional template settings
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([isActive, isPublic])
  @@index([createdByUserId])
  @@map("templates")
}

model TemplateImage {
  id         Int      @id @default(autoincrement())
  templateId Int
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  imageUrl   String // Azure Blob Storage URL
  imageType  String // thumbnail, preview, screenshot
  order      Int      @default(0)
  caption    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([templateId])
  @@map("template_images")
}

model TemplatePages {
  id              Int      @id @default(autoincrement())
  templateId      Int
  template        Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  name            String
  content         String? // Page content (HTML, JSON, etc.)
  order           Int
  settings        Json? // Page-specific settings
  linkingIdPrefix String? // Prefix for generating unique linking IDs
  metadata        Json? // Additional page data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([templateId])
  @@map("template_pages")
}
