generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int        @id @default(autoincrement())
  email                  String     @unique
  name                   String?
  password               String
  passwordResetToken     String?    @unique
  passwordResetExpiresAt DateTime?
  isAdmin                Boolean    @default(false)
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
  maximumFunnels         Int?
  funnels                Funnel[]
  domains                Domain[]
  templates              Template[]

  @@map("users")
}

model Funnel {
  id                Int            @id @default(autoincrement())
  name              String
  status            FunnelStatus   @default(DRAFT)
  userId            Int
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  templateId        Int? // Track which template this funnel was created from
  template          Template?      @relation(fields: [templateId], references: [id])
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  themeId           Int?           @unique
  domainConnections FunnelDomain[]
  theme             Theme?         @relation(fields: [themeId], references: [id])
  pages             Page[]

  @@index([userId])
  @@index([status])
  @@index([templateId])
  @@map("funnels")
}

enum FunnelStatus {
  DRAFT
  LIVE
  ARCHIVED
  SHARED
}

model Domain {
  id                    Int            @id @default(autoincrement())
  hostname              String         @unique
  type                  DomainType
  status                DomainStatus   @default(PENDING)
  sslStatus             SslStatus      @default(PENDING)
  userId                Int
  cloudflareHostnameId  String?        @unique
  cloudflareZoneId      String?
  cloudflareRecordId    String?
  verificationToken     String?
  ownershipVerification Json?
  dnsInstructions       Json?
  sslCertificateId      String?
  sslValidationRecords  Json?
  lastVerifiedAt        DateTime?
  expiresAt             DateTime?
  notes                 String?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  user                  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  funnelConnections     FunnelDomain[]

  @@index([userId])
  @@index([status])
  @@index([type])
  @@map("domains")
}

model FunnelDomain {
  id        Int      @id @default(autoincrement())
  funnelId  Int
  domainId  Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, domainId])
  @@index([funnelId])
  @@index([domainId])
  @@map("funnel_domains")
}

model Page {
  id             Int      @id @default(autoincrement())
  name           String
  content        String?
  order          Int
  linkingId      String?
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  visits         Int      @default(0)
  funnelId       Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  funnel         Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, linkingId])
  @@map("pages")
}

model Session {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  funnelId     Int
  visitedPages Int[]    @default([])
  interactions Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([sessionId])
  @@index([funnelId])
  @@index([createdAt])
  @@map("sessions")
}

enum DomainType {
  CUSTOM_DOMAIN
  SUBDOMAIN
}

enum DomainStatus {
  PENDING
  VERIFIED
  ACTIVE
  FAILED
  SUSPENDED
}

enum SslStatus {
  PENDING
  ACTIVE
  ERROR
  EXPIRED
}

model Theme {
  id              Int          @id @default(autoincrement())
  name            String       @default("Default Theme")
  backgroundColor String       @default("#0e1e12")
  textColor       String       @default("#d4ecd0")
  buttonColor     String       @default("#387e3d")
  buttonTextColor String       @default("#e8f5e9")
  borderColor     String       @default("#214228")
  optionColor     String       @default("#16331b")
  fontFamily      String       @default("Inter, sans-serif")
  borderRadius    BorderRadius @default(SOFT)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  funnel Funnel?

  @@map("themes")
}

enum BorderRadius {
  NONE
  SOFT
  ROUNDED
}

// Template System Models
model TemplateCategory {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  slug        String     @unique
  description String?
  icon        String? // Icon class or emoji
  order       Int        @default(0)
  isActive    Boolean    @default(true)
  templates   Template[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@index([isActive])
  @@map("template_categories")
}

model Template {
  id              Int              @id @default(autoincrement())
  name            String
  slug            String           @unique
  description     String?
  categoryId      Int
  category        TemplateCategory @relation(fields: [categoryId], references: [id])
  thumbnailImage  String? // Main thumbnail image URL
  previewImages   TemplateImage[] // Additional preview images
  pages           TemplatePages[] // Template page data
  tags            String[] // Search tags
  usageCount      Int              @default(0)
  isActive        Boolean          @default(true)
  isPublic        Boolean          @default(true)
  createdByUserId Int
  createdBy       User             @relation(fields: [createdByUserId], references: [id])
  funnelsCreated  Funnel[] // Track funnels created from this template
  metadata        Json? // Additional template settings
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([isActive, isPublic])
  @@index([createdByUserId])
  @@map("templates")
}

model TemplateImage {
  id         Int      @id @default(autoincrement())
  templateId Int
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  imageUrl   String // Azure Blob Storage URL
  imageType  String // thumbnail, preview, screenshot
  order      Int      @default(0)
  caption    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([templateId])
  @@map("template_images")
}

model TemplatePages {
  id              Int      @id @default(autoincrement())
  templateId      Int
  template        Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  name            String
  content         String? // Page content (HTML, JSON, etc.)
  order           Int
  settings        Json? // Page-specific settings
  linkingIdPrefix String? // Prefix for generating unique linking IDs
  metadata        Json? // Additional page data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([templateId])
  @@map("template_pages")
}
