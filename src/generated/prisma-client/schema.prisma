generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int               @id @default(autoincrement())
  email                  String            @unique
  name                   String?
  password               String
  passwordResetToken     String?           @unique
  passwordResetExpiresAt DateTime?
  isAdmin                Boolean           @default(false)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  maximumFunnels         Int?
  workspaceMembers       WorkspaceMember[]
  ownedWorkspaces        Workspace[]       @relation("WorkspaceOwner")
  createdFunnels         Funnel[]          @relation("FunnelCreator")
  domains                Domain[] // Keep domains user-owned
  templates              Template[]
  imageFolders           ImageFolder[]

  @@map("users")
}

model Workspace {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  ownerId     Int
  description String?
  settings    Json?    @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner   User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members WorkspaceMember[]
  funnels Funnel[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          Int                   @id @default(autoincrement())
  userId      Int
  workspaceId Int
  role        WorkspaceRole
  permissions WorkspacePermission[]
  joinedAt    DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@index([workspaceId])
  @@index([userId])
  @@map("workspace_members")
}

enum WorkspaceRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

enum WorkspacePermission {
  MANAGE_WORKSPACE
  MANAGE_MEMBERS
  CREATE_FUNNELS
  EDIT_FUNNELS
  EDIT_PAGES
  DELETE_FUNNELS
  VIEW_ANALYTICS
}

model Funnel {
  id                Int            @id @default(autoincrement())
  name              String
  status            FunnelStatus   @default(DRAFT)
  workspaceId       Int
  createdBy         Int
  workspace         Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  creator           User           @relation("FunnelCreator", fields: [createdBy], references: [id])
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  themeId           Int?           @unique
  domainConnections FunnelDomain[]
  theme             Theme?         @relation(fields: [themeId], references: [id])
  pages             Page[]

  @@index([workspaceId])
  @@index([createdBy])
  @@index([status])
  @@map("funnels")
}

enum FunnelStatus {
  DRAFT
  LIVE
  ARCHIVED
  SHARED
}

model Domain {
  id                    Int            @id @default(autoincrement())
  hostname              String         @unique
  type                  DomainType
  status                DomainStatus   @default(PENDING)
  sslStatus             SslStatus      @default(PENDING)
  userId                Int
  cloudflareHostnameId  String?        @unique
  cloudflareZoneId      String?
  cloudflareRecordId    String?
  verificationToken     String?
  ownershipVerification Json?
  dnsInstructions       Json?
  sslCertificateId      String?
  sslValidationRecords  Json?
  lastVerifiedAt        DateTime?
  expiresAt             DateTime?
  notes                 String?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  user                  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  funnelConnections     FunnelDomain[]

  @@index([userId])
  @@index([status])
  @@index([type])
  @@map("domains")
}

model FunnelDomain {
  id        Int      @id @default(autoincrement())
  funnelId  Int
  domainId  Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  funnel    Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, domainId])
  @@index([funnelId])
  @@index([domainId])
  @@map("funnel_domains")
}

model Page {
  id             Int      @id @default(autoincrement())
  name           String
  content        String?
  order          Int
  linkingId      String?
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  visits         Int      @default(0)
  funnelId       Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  funnel         Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)

  @@unique([funnelId, linkingId])
  @@map("pages")
}

model Session {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  funnelId     Int
  visitedPages Int[]    @default([])
  interactions Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  formSubmissions FormSubmission[]

  @@index([sessionId])
  @@index([funnelId])
  @@index([createdAt])
  @@map("sessions")
}

enum DomainType {
  CUSTOM_DOMAIN
  SUBDOMAIN
}

enum DomainStatus {
  PENDING
  VERIFIED
  ACTIVE
  FAILED
  SUSPENDED
}

enum SslStatus {
  PENDING
  ACTIVE
  ERROR
  EXPIRED
}

model Theme {
  id              Int          @id @default(autoincrement())
  name            String       @default("Default Theme")
  backgroundColor String       @default("#0e1e12")
  textColor       String       @default("#d4ecd0")
  buttonColor     String       @default("#387e3d")
  buttonTextColor String       @default("#e8f5e9")
  borderColor     String       @default("#214228")
  optionColor     String       @default("#16331b")
  fontFamily      String       @default("Inter, sans-serif")
  borderRadius    BorderRadius @default(SOFT)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  funnel Funnel?

  @@map("themes")
}

enum BorderRadius {
  NONE
  SOFT
  ROUNDED
}

// Template System Models
model TemplateCategory {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  slug        String     @unique
  description String?
  templates   Template[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@map("template_categories")
}

model Template {
  id              Int              @id @default(autoincrement())
  name            String
  slug            String           @unique
  description     String?
  categoryId      Int
  category        TemplateCategory @relation(fields: [categoryId], references: [id])
  previewImages   TemplateImage[]
  pages           TemplatePage[]
  tags            String[]
  usageCount      Int              @default(0)
  isActive        Boolean          @default(true)
  isPublic        Boolean          @default(true)
  createdByUserId Int
  createdBy       User             @relation(fields: [createdByUserId], references: [id])
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([isActive, isPublic])
  @@index([createdByUserId])
  @@map("templates")
}

model TemplateImage {
  id         Int               @id @default(autoincrement())
  templateId Int
  template   Template          @relation(fields: [templateId], references: [id], onDelete: Cascade)
  imageUrl   String
  imageType  TemplateImageType @default(PREVIEW)
  order      Int               @default(0)
  caption    String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@index([templateId])
  @@map("template_images")
}

enum TemplateImageType {
  THUMBNAIL
  PREVIEW
}

model TemplatePage {
  id             Int      @id @default(autoincrement())
  templateId     Int
  template       Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  name           String
  content        String?
  order          Int
  settings       Json?
  linkingId      String?  @unique
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([templateId])
  @@map("template_pages")
}

model Image {
  id       Int          @id @default(autoincrement())
  name     String?
  url      String
  altText  String?
  size     Int?
  folderId Int?
  folder   ImageFolder? @relation("ImageFolderImages", fields: [folderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("images")
}

model ImageFolder {
  id     Int     @id @default(autoincrement())
  name   String
  userId Int
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  images Image[] @relation("ImageFolderImages")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("image_folders")
}

model Form {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  formContent Json
  isActive    Boolean  @default(true)
  funnelId    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  submissions FormSubmission[]

  @@index([isActive])
  @@index([funnelId])
  @@map("forms")
}

model FormSubmission {
  id            Int       @id @default(autoincrement())
  formId        Int
  sessionId     String
  submittedData Json?
  isCompleted   Boolean   @default(false)
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  form    Form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)

  @@unique([formId, sessionId])
  @@index([sessionId])
  @@index([isCompleted])
  @@map("form_submissions")
}
