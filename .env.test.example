# Test Environment Configuration
# Copy this file to .env.test and fill in your local test database credentials

# CRITICAL: Test database MUST have "test" in the name
# Examples: funnel_builder_test, myapp_test, test-database
NODE_ENV=test

# Server Configuration
PORT=3001

# Database Configuration
# IMPORTANT: Replace with your local PostgreSQL test database
# The database name MUST contain "test" for safety
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/funnel_builder_test

# JWT Configuration
JWT_SECRET=test-secret-key-for-testing-only

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# Cloudflare Configuration (can use dummy values for tests)
CF_API_TOKEN=test-token
CF_ACCOUNT_ID=test-account
CF_ZONE_ID=test-zone

# SendGrid Configuration (can use dummy values for tests)
SENDGRID_API_KEY=test-sendgrid-key
SENDGRID_FROM_EMAIL=test@example.com

# MamoPay Configuration (can use dummy values for tests)
MAMOPAY_API_URL=https://sandbox.dev.business.mamopay.com
MAMOPAY_API_KEY=test-mamopay-key

# Frontend URL
FRONTEND_URL=https://testsite.com
